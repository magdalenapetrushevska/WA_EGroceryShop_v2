            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label> <br />
                <input asp-for="ImageFile"  />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingGrade" class="control-label"></label>
                <input asp-for="RatingGrade" class="form-control" />
                <span asp-validation-for="RatingGrade" class="text-danger"></span>
            </div>
            
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
