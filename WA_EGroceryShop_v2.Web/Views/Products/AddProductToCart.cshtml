@model WA_EGroceryShop_v2.Domain.DTO.AddToShoppingCartDto

<br />
<h1><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="blue" class="bi bi-bag" viewBox="0 0 16 16">
    <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
</svg> Please enter the quantity of product to be ordered</h1>


<hr />

<div class="row">
    <div class="col-md-4 m-auto">
        <form asp-action="AddProductToCart" method="post">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="SelectedProduct.Name"></label>
                <input disabled asp-for="SelectedProduct.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Quantity"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>